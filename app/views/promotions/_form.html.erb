    <%= f.label :download_link %> (use http://www.brighthope.org/downloads/misc_downloads/BH_BoardandKeyStaff.pdf)
    <%= f.text_field :download_link %>
  </div>
  <div class="field">
    <%= f.label :video_embed %> (use 21762736)
    <%= f.text_field :video_embed %>
  </div>
  <div class="field">
    <%= f.label :content %> (write whatever)
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :photo1 %> (use http://www.ruthlesslycreate.com/images/works/luckymonk/1.jpg)
