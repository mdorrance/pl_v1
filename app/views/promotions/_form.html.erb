      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %> (doesn't matter what this is)
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %> (use real email)
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :download_name %> (pick a name like flyer or brochure)
    <%= f.text_field :download_name %>
  </div>
